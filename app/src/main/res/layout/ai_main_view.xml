<?xml version="1.0" encoding="utf-8"?>
<helium314.keyboard.keyboard.ai.AiView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/keyboard_background"
    android:orientation="vertical"
    android:visibility="visible">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:id="@+id/ai_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/outline_arrow_back_24"
                android:tint="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AnaBoard"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="8dp"
               android:layout_marginTop="2dp"
               android:text="by Analysa"
               android:textColor="@color/text_secondary"
               android:textSize="12sp"
               android:fontFamily="sans-serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selector_layout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ai_chip_bg"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/selector_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:alpha="0.7"
                android:src="@drawable/tune_24dp"
                android:tint="@color/text_primary" />

            <Spinner
                android:id="@+id/ai_selector_spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:background="@android:color/transparent"
                android:dropDownWidth="140dp"
                android:gravity="center_vertical"
                android:minWidth="80dp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Feature Bar -->
    <HorizontalScrollView
        android:id="@+id/ai_buttons_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:id="@+id/btn_ask"
                style="@style/AiChipStyle"
                android:text="ðŸ§  Ask" />
            <TextView
                android:id="@+id/btn_translate"
                style="@style/AiChipStyle"
                android:text="ðŸŒ Translate"
                app:drawableStartCompat="@drawable/translate" />

            <TextView
                android:id="@+id/btn_polish"
                style="@style/AiChipStyle"
                android:text="âœ¨ Polish"
                app:drawableStartCompat="@drawable/ic_polish" />

            <TextView
                android:id="@+id/btn_fix_grammar"
                style="@style/AiChipStyle"
                android:text="âœï¸ Grammar"
                app:drawableStartCompat="@drawable/ic_autocorrect_rounded" />

            <TextView
                android:id="@+id/btn_explain"
                style="@style/AiChipStyle"
                android:text="ðŸ’¡ Explain"
                app:drawableStartCompat="@drawable/outline_award_star_24" />

            <TextView
                android:id="@+id/btn_reply"
                style="@style/AiChipStyle"
                android:text="ðŸ’¬ Reply"
                app:drawableStartCompat="@drawable/sym_keyboard_send_rounded" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Results View -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ai_results_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"
        android:visibility="gone"
        tools:itemCount="3"
        tools:listitem="@layout/ai_result_item" />

    <!-- Welcome / Initial View -->
    <LinearLayout
        android:id="@+id/ai_initial_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <View
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/outline_award_star_24"
            android:backgroundTint="@color/text_primary"
            android:alpha="0.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ready to perfect your text?"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:alpha="0.6"
            android:text="Paste or select text and use the features above to start transforming."
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/ai_loading_progress"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:indeterminateTint="@color/accent"
        android:visibility="gone" />


</helium314.keyboard.keyboard.ai.AiView>
